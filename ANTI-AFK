wait(0.5)

-- Anti-AFK GUI
local gui = Instance.new("ScreenGui")
local label = Instance.new("TextLabel")

gui.Parent = game.CoreGui
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

label.Parent = gui
label.Active = true
label.Draggable = true
label.BackgroundColor3 = Color3.fromRGB(25, 25, 25)      -- Dark gray background
label.BorderSizePixel = 0                                -- No border for a flat look
label.Position = UDim2.new(0.7, 0, 0.1, 0)
label.Size = UDim2.new(0, 140, 0, 50)
label.Font = Enum.Font.GothamBold                        -- Cleaner font
label.TextColor3 = Color3.fromRGB(80, 250, 123)          -- Soft green
label.TextStrokeTransparency = 0.8                       -- Slight text outline for clarity
label.TextSize = 16
label.TextWrapped = true

label.Text = [[
<font color="#00BFFF">Anti AFK</font>
<br/>
<font color="#50FA7B"><b>Active</b></font>
]]

-- Anti-AFK Function
local vu = game:service("VirtualUser")
game:service("Players").LocalPlayer.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)
